<div class=@AlertClass role="alert" style="display:@(ShowErrorMessage ? "block" : "none"); margin: 20px 0;">
    @Message
</div>

@code {
    [Parameter] public string? Message { get; set; }
    [Parameter] public bool ShowErrorMessage { get; set; } = false;
    [Parameter] public string AlertType { get; set; } = "danger";

    private string AlertClass => AlertType switch
    {
        "warning" => "alert alert-warning",
        "info" => "alert alert-info",
        "success" => "alert alert-success",
        _ => "alert alert-danger",
    };
}
